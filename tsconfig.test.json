{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,

    "outDir": "out-test",
    "sourceRoot": "src",
    "inlineSourceMap": true
  },
  "include": ["src", "./typings"]
}
